@model BookWeb.Entities.Author
@{
    ViewData["Title"] = "Author";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="forms">
            <h3 class="title1">Forms</h3>
            <div class=" form-grids row form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms">
                    <div class="form-title">
                        <h4>Create New Author :</h4>
                    </div>
                    <div class="form-body">
                        <form asp-action="Edit" method="post" class="mt-4">
                            <div class="card-block">
                                <div class="card-body">
                                    <fieldset class="form-group">
                                        <input type="text" asp-for="Title" placeholder="Title" class="form-control" id="basicInput" required="">
                                    </fieldset><br />
                                    <fieldset class="form-group">
                                        <input type="text" asp-for="Name" placeholder="Enter Author Name" class="form-control" id="basicInput" required="">
                                    </fieldset><br />


                                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                                    <button type="submit" class="btn btn-dark">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

