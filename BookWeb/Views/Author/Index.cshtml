@model IEnumerable<BookWeb.Entities.Author>
@{
    ViewData["Title"] = "Author";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            
                    <h4>AUTHORS:</h4>
                    <a asp-controller="Author" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Author</a>

                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Title</th>
                                <th>Name</th>
                                <th>Created By</th>
                                <th>Date Created</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model)
                            {
                                <tr>
                                    <td>@author.Id</td>
                                    <td>@author.Title </td>
                                    <td>@author.Name  </td>
                                    <td>@author.CreatedBy  </td>
                                    <td>@author.DateCreated    </td>
                                    <td><a asp-action="Edit" asp-route-id="@author.Id" alt="Edit"><i class="fa fa-pencil m-r-10" aria-hidden="true"></i></a> </td>
                                    <td><a onclick = "return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@author.Id"><i class="fa fa-trash-o m-r-10" aria-hidden="true"></i></a> </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    
