@model IEnumerable<MybookWeb.Entities.Book>
@{
    ViewData["Title"] = "Books";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Tables</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Home</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Tables
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Tables start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Books</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <div class="col-md-12 col-12 align-self-center">

                                    <a asp-controller="Book" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Book</a>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Title</th>
                                                <th>ISBN</th>
                                                <th>YearPublish</th>
                                                <th>Rating</th>
                                                <th>Summary</th>
                                                <th>CreatedBy</th>
                                                <th>DateCreated</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model)
                                            {
                                            <tr>
                                                <td scope="row">@book.Id</td>
                                                <td>@book.Title</td>
                                                <td>@book.ISBN</td>
                                                <td>@book.YearPublish</td>
                                                <td>@book.Rating</td>
                                                <td>@book.Summary</td>
                                                <td>@book.CreatedBy</td>
                                                <td>@book.DateCreated</td>
                                                <td><a class="ft-edit-2" asp-action="Edit" asp-route-id="@book.Id" aria-hidden="false"></a></td>
                                                <td><a class="ft-delete" asp-action="Delete" asp-route-id="@book.Id" aria-hidden="false"></a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
