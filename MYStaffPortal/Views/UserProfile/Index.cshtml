@using Microsoft.AspNetCore.Identity
@using StaffPortal.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<StaffPortal.Entities.UserProfile>
@{
    ViewData["Title"] = "User Profile";
}
<!-- ============================================================== -->

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Profile</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Profile Page</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- row -->
<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="white-box">
            <div class="user-bg">
                <img width="100%" alt="user" src="~/images/big/img1.jpg">
                <div class="overlay-box">
                    <div class="user-content">
                        <a href="javascript:void(0)"><img src="images/users/genu.jpg" class="thumb-lg img-circle" alt="img"></a>
                        <h4 class="text-white">@UserManager.GetUserName(User)</h4>
                        <h5 class="text-white">.</h5>
                    </div>
                </div>
            </div>
            <div class="user-btm-box">
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-purple"><i class="ti-facebook"></i></p>
                    <h1>258</h1>
                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-blue"><i class="ti-twitter"></i></p>
                    <h1>125</h1>
                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-danger"><i class="ti-dribbble"></i></p>
                    <h1>556</h1>
                </div>
            </div>
            <hr />

             <div class="row"> 

            <div class="col-md-12 col-xs-4">
                <div class="white-box">
                    <h3 class="form-group">Salary Structure</h3>
                    <form class="form-horizontal form-material">
                        <div class="form-group">
                            <label class="col-md-4">Grade Name</label>
                            <div class="col-md-8">
                                <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Level</label>
                            <div class="col-md-8">
                                <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Step</label>
                            <div class="col-md-8">
                                <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                    </form>


                </div>
            </div>

        </div>
        </div>
    </div>
    
    <div class="col-md-8 col-xs-12">
        <div class="white-box">
            <form class="form-horizontal form-material">
                <div class="form-group">
                    <label class="col-md-12">FirstName</label>
                    <div class="col-md-12">
                        <input type="text" value="@UserManager.GetUserName(User)" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">LastName</label>
                    <div class="col-md-12">
                        <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="example-email" class="col-md-12">Email</label>
                    <div class="col-md-12">
                        <input type="email" value="Data from admin db" class="form-control form-control-line" name="example-email" id="example-email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Local Government</label>
                    <div class="col-md-12">
                        <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">State</label>
                    <div class="col-md-12">
                        <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Country</label>
                    <div class="col-md-12">
                        <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Department</label>
                    <div class="col-md-12">
                        <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Faculty</label>
                    <div class="col-md-12">
                        <input type="text" value="@UserManager.GetUserName(User)" class="form-control form-control-line" readonly>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
    


