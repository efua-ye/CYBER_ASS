@model IEnumerable<StaffPortal.Entities.Faculty>
@{
    ViewData["Title"] = "Faculties";
}
<!-- ============================================================== -->

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Faculty</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Faculty</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="white-box">

            <a asp-controller="Faculty" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Grade</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Created By</th>
                            <th>Date Created</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var Faculty in Model)
                        {
                            <tr>
                                <td>@Faculty.Id</td>

                                <td>@Faculty.Name  </td>
                                <td>@Faculty.Code </td>
                                <td>@Faculty.CreatedBy  </td>
                                <td>@Faculty.DateCreated    </td>

                                <td>

                                <td><a asp-action="Edit" asp-route-id="@Faculty.Id" alt="Edit"><i class="ti-pencil" aria-hidden="true"></i></a> </td>
                                <td><a onclick="return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@Faculty.Id"><i class="ti-trash" aria-hidden="true"></i></a> </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>