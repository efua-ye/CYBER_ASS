@model IEnumerable<StaffPortal.Entities.ApplicationRole>
@{
    // Layout = "~/Views/Shared/_Admin.cshtml";

    ViewBag.Title = "All Roles";
}
<h4>All Roles</h4>
<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Roles</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Roles</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="white-box">
            @if (Model.Any())
            {
                <a asp-action="CreateRole" asp-controller="Administration" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Role</a>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" cellspacing="0">
                            <thead>

                                <tr>
                                    <th>Role ID</th>
                                    <th>Role Name</th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name  </td>
                                        <td><a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" alt="Edit"><i class="ti-pencil" aria-hidden="true"></i></a> </td>
                                        <td><a onclick="return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@role.Id"><i class="ti-trash" aria-hidden="true"></i></a> </td>
                                        <td><a asp-action="CreateRole" asp-controller="Administration" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>View Users</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }


            else
            {
                <div class="card">
                    <div class="card-header">
                        No roles created yet
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Use the button to create a role</h5>
                        <a class="btn btn-dark"
                           asp-controller="Administration" asp-action="CreateRole">
                            Create Role
                        </a>
                    </div>
                </div>
            }






        </div>
    </div>
</div>


