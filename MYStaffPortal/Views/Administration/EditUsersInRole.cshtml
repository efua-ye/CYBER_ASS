@model List<UserRoleViewModel>
@{

    var roleId = ViewBag.roleId;
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Roles</h3>
    </div>
    <!--   <div class="col-md-7 align-self-center">
         <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
      </div>-->
</div>

<div class="row">
    <!-- column -->
    <div class="col-sm-12">
        <div class="white-box">
            <h3>Add or Remove Users from this Role :</h3>
            <br />
            
            <div class="table-responsive">
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].Username" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].Username
                            </label>
                        </div>
                    }
                    
                    <br />
                    <div class="form-title">
                        <input type="submit" value="Update" class="btn float-right hidden-sm-down btn-success" />
                        <a asp-action="EditRole" asp-route-id="@roleId" class="btn float-right hidden-sm-down btn-success"> Cancel</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>