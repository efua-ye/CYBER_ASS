@model StaffPortal.Entities.Grade
@{
    ViewData["Title"] = "Edit Grade";
}
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Grades</h3>
    </div>
  <!--   <div class="col-md-7 align-self-center">
       <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
    </div>--> 
</div>

<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <form asp-action="Create" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="GradeName">Name</label>
                            <input type="text" asp-for="GradeName" class="form-control" placeholder="Enter Grade Name" required="">
                            <span asp-validation-for="GradeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Level">Level</label>
                            <input type="text" asp-for="Level" class="form-control" id="name" placeholder="Enter Level" required="">
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Step">Step</label>
                            <input type="text" asp-for="Step" class="form-control" id="name" placeholder="Enter Step" required="">
                            <span asp-validation-for="Step" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <a href="Cancel" type="button" class="btn btn-dark">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>